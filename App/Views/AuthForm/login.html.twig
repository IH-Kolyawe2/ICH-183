{% extends 'Layout/base.html.twig' %}

{% block title %}
    Connexion d'un utilisateur
{% endblock %}

{% block content %}

    <section id="authentication" class="bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg mx-auto">
                    <h2>Connexion HTTP Form</h2>
                    <form method="POST">
                        <div class="form-group">
                            <label for="username">Nom d'utilisateur</label>
                            <input type="text" class="form-control" id="username" name="mailAddress" placeholder="Nom d'utilisateur" value="">
                        </div>
                        <div class="form-group">
                            <label for="username">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe" value="">
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="{{ csrf.key }}" value="{{ csrf.value }}">
                            <a href="javascript:history.back()" class="btn btn-secondary">Retour</a>
                            <button type="submit" class="btn btn-primary">Connexion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}