{% extends '/layout/base.html.twig' %}

{% block title %}
    Supression d'une transaction financière
{% endblock %}

{% block content %}

    <section class="bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>Supression d'une transaction financière</h2>
                    <form method="post">
                        <div class="form-group">
                            <label for="idFinancialTransaction">ID</label>
                            <input type="text" class="form-control" id="idFinancialTransaction" name="idFinancialTransaction" readonly value="{{ financialTransaction.idFinancialTransaction }}">
                        </div>
                        <div class="form-group">
                            <label for="idSender">Expéditeur</label>
                            <select id="idSender" name="idSender" disabled>
                                <option value="{{ financialTransaction.idSender }}">
                                    {{ financialTransaction['sender.owner.firstname'] }} 
                                    {{ financialTransaction['sender.owner.lastname'] }} 
                                    ({{ financialTransaction['sender.owner.mailAddress'] }}) - 
                                    {{ financialTransaction['sender.description'] }}
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="idRecipient">Destinataire</label>
                            <select id="idRecipient" name="idRecipient" disabled>
                                <option value="{{ financialTransaction.idRecipient }}">
                                    {{ financialTransaction['recipient.owner.firstname'] }} 
                                    {{ financialTransaction['recipient.owner.lastname'] }} 
                                    ({{ financialTransaction['recipient.owner.mailAddress'] }}) - 
                                    {{ financialTransaction['recipient.description'] }}
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="amount">Montant</label>
                            <input type="text" class="form-control" id="amount" name="amount" readonly placeholder="Montant" value="{{ financialTransaction.amount }}">
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="{{ csrf.key }}" value="{{ csrf.value }}">
                            <a href="javascript:history.back()" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}