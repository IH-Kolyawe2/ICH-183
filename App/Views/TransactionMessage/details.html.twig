{% extends 'Layout/base.html.twig' %}

{% block title %}
    Détail d'un message de transaction
{% endblock %}

{% block content %}    

    <section class="bg-ligh">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>Détail d'un message de transaction</h2>
                    <form method="POST">
                        <div class="form-group">
                            <label for="idTransactionMessage">ID</label>
                            <input type="text" class="form-control" id="idTransactionMessage" name="idTransactionMessage" readonly value="{{ transactionMessage.idTransactionMessage }}">
                        </div>
                        <div class="form-group">
                            <label for="idAuthor">Expéditeur</label>
                            <select id="idAuthor" name="idAuthor" disabled>
                                <option value="{{ transactionMessage.idAuthor }}">
                                    {{ transactionMessage['author.firstname'] }} 
                                    {{ transactionMessage['author.lastname'] }} 
                                    ({{ transactionMessage['author.mailAddress'] }})
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                             <label for="idTransaction">Transaction</label>
                            <select id="idTransaction" name="idTransaction" disabled>
                                <option value="{{ transactionMessage.idFinancialTransaction }}">
                                    {{ transactionMessage['transaction.sender.owner.firstname'] }} 
                                    {{ transactionMessage['transaction.sender.owner.lastname'] }} 
                                    ({{ transactionMessage['transaction.sender.owner.mailAddress'] }}) - 
                                    {{ transactionMessage['transaction.sender.description'] }} 
                                    <br>-><br>
                                    {{ transactionMessage['transaction.recipient.owner.firstname'] }} 
                                    {{ transactionMessage['transaction.recipient.owner.lastname'] }} 
                                    ({{ transactionMessage['transaction.recipient.owner.mailAddress'] }}) - 
                                    {{ transactionMessage['transaction.recipient.description'] }}
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="content" class="form-group">Montant</label>
                            <input type="text" class="form-control" id="content" name="content" readonly placeholder="Contenu" value="{{ transactionMessage.content }}">
                        </div>
                        <div class="form-group">
                            <a href="/financialTransaction/index/?idTransaction={{ transactionMessage.idTransaction }}" class="btn btn-secondary">Voir la transaction financière </a>
                            <a href="javascript:history.back()" class="btn btn-primary">Retour</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}