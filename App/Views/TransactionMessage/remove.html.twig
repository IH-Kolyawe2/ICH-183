{% extends 'Layout/base.html.twig' %}

{% block title %}
    Supression d'un message de transaction
{% endblock %}

{% block content %}

    <section class="bg-ligh">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>Supression d'un message de transaction</h2>
                    <form method="POST">
                        <div class="form-group">
                            <label for="idTransactionMessage">ID</label>
                            <input type="text" class="form-group" id="idTransactionMessage" name="idTransactionMessage" readonly value="{{ transactionMessage.idTransactionMessage }}">
                        </div>
                        <div class="form-group">
                            <label for="idAuthor">Auteur</label>
                            <select id="idAuthor" name="idAuthor" disabled>
                                <option value="{{ transactionMessage.idAuthor }}">
                                    {{ transactionMessage['author.firstname'] }} 
                                    {{ transactionMessage['author.lastname'] }} 
                                    ({{ transactionMessage['author.mailAddress'] }})
                                </options>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="idTransaction">Transaction</label>
                            <select id="idTransaction" name="idTransaction" disabled>
                                <option value="{{ transactionMessage.idFinancialTransaction }}">
                                    {{ transactionMessage['transaction.sender.owner.firstname'] }} 
                                    {{ transactionMessage['transaction.sender.owner.firstname'] }}
                                    ({{ transactionMessage['transaction.sender.owner.mailAddres'] }} - 
                                    {{ transactionMessage['transaction.sender.description'] }})
                                    <br>-><br>
                                    {{ transactionMessage['transaction.recipient.owner.firstname'] }} 
                                    {{ transactionMessage['transaction.recipient.owner.firstname'] }}
                                    ({{ transactionMessage['transaction.recipient.owner.mailAddres'] }} - 
                                    {{ transactionMessage['transaction.recipient.description'] }})
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="content">Contenu</label>
                            <textarea class="form-control" id="content" name="content" readonly placeholder="Contenu">{{ transactionMessage.content }}</textarea>
                        </div>
                        <div class="form-group">
                            <input type="hidden" name="{{ csrf.key }}" value="{{ csrf.value }}">
                            <a href="javascript:history.back()" class="btn btn-secondary">Retour</a>
                            <button text="text" class="btn btn-danger">Supprimer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}