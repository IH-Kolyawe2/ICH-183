{% extends 'Layout/base.html.twig' %}

{% block title %}
    Détail d'un utilisateur
{% endblock %}

{% block content %}

    <section class="bg-ligh">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>Détail d'un utilisateur</h2>
                    <form method="POST">
                        <div class="form-group">
                            <label for="idUser">ID</label>
                            <input type="text" class="form-control" id="idUser" name="idUser" readonly value="{{ user.idUser }}">
                        </div>
                        <div class="form-group">
                            <label for="firstname">Prénom</label>
                            <input type="text" class="form-control" id="firstname" name="firstname" readonly value="{{ user.firstname }}">
                        </div>
                        <div class="form-group">
                            <label for="lastname">Nom</label>
                            <input type="text" class="form-control" id="lastname" name="lastname" readonly value="{{ user.lastname }}">
                        </div>
                        <div class="form-group">
                            <label for="mailAddress">Addresse email</label>
                            <input type="text" class="form-control" id="mailAddress" name="mailAddress" readonly value="{{ user.mailAddress }}">
                        </div>
                        <div class="form-group">
                            <a href="javascript:history.back()" class="btn btn-secondary active" role="button">Retour</a>
                            <a href="/bankAccount/index/?IdOwner={{ user.idUser }}" class="btn btn-primary" role="button">Liste des comptes bancaires</a>
                        </div>
                    </form
                </div>
        </div>
    </section>

{% endblock %}